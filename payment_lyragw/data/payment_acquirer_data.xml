<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_lyragw" model="payment.acquirer">
            <field name="name"><![CDATA[Lyra]]></field>
            <field name="image" type="base64" file="payment_lyragw/static/src/img/logo.png" />
            <field name="provider">lyragw</field>
            <field name="company_id" ref="base.main_company" />
            <field name="view_template_id" ref="lyragw_acquirer_button" />
            <field name="environment">test</field>
            <field name="pre_msg"><![CDATA[<p>You will be redirected to the Lyra website after clicking on the payment button.</p>]]></field>

            <field name="lyragw_available_languages"></field>
            <field name="lyragw_capture_delay"></field>
            <field name="lyragw_validation_mode"> </field>
            <field name="lyragw_payment_cards"></field>
            <field name="lyragw_threeds_min_amount"></field>
            <field name="lyragw_redirect_enabled">0</field>
            <field name="lyragw_redirect_success_timeout">5</field>
            <field name="lyragw_redirect_error_timeout">5</field>
            <field name="lyragw_return_mode">GET</field>

            <field name="description" type="html">
                <p><![CDATA[Accept payments with Lyra secure payment gateway.]]></p>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                    <li class="list-inline-item"><i class="fa fa-check" />eCommerce</li>
                </ul>
            </field>
        </record>
    </data>
</odoo>