<odoo>
    <data>
        <record id="acquirer_form_lyragw" model="ir.ui.view">
            <field name="name">acquirer.form.lyragw</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form" />
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <div attrs="{'invisible': [('provider', '!=', 'lyragw')]}">
                        <group string="PAYMENT GATEWAY ACCESS">
                            <field name="lyragw_site_id" autocomplete="off" attrs="{'required': [('provider', 'in', ('lyragw'))]}" />
                            <field name="lyragw_key_test" autocomplete="off" attrs="{'required': [('provider', 'in', ('lyragw'))]}" />
                            <field name="lyragw_key_prod" autocomplete="off" attrs="{'required': [('provider', 'in', ('lyragw'))]}" />
                            <field name="lyragw_sign_algo" attrs="{'required': [('provider', 'in', ('lyragw'))]}" style="background-color: unset !important;" />
                            <field name="lyragw_notify_url" />
                            <field name="lyragw_gateway_url" attrs="{'required': [('provider', 'in', ('lyragw'))]}" />
                        </group>
                        <group string="PAYMENT PAGE">
                            <field name="lyragw_language" attrs="{'required': [('provider', 'in', ('lyragw'))]}" style="background-color: unset !important;" />
                            <field name="lyragw_available_languages" widget="many2many_tags" options="{'no_create': True}" />
                            <field name="lyragw_capture_delay" />
                            <field name="lyragw_validation_mode" attrs="{'required': [('provider', 'in', ('lyragw'))]}" style="background-color: unset !important;" />
                            <field name="lyragw_payment_cards" widget="many2many_tags" options="{'no_create': True}" />
                        </group>
                        <group string="SELECTIVE 3DS">
                            <field name="lyragw_threeds_min_amount" />
                        </group>
                        <group string="RETURN TO SHOP">
                            <field name="lyragw_redirect_enabled" attrs="{'required': [('provider', 'in', ('lyragw'))]}" style="background-color: unset !important;" />
                            <field name="lyragw_redirect_success_timeout" />
                            <field name="lyragw_redirect_success_message" />
                            <field name="lyragw_redirect_error_timeout" />
                            <field name="lyragw_redirect_error_message" />
                            <field name="lyragw_return_mode" attrs="{'required': [('provider', 'in', ('lyragw'))]}" style="background-color: unset !important;" />
                        </group>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_lyragw" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.lyragw</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form" />
            <field name="arch" type="xml">
                <field name="acquirer_reference" position="after">
                    <field name="lyra_trans_status" attrs="{'invisible': [('provider', '!=', 'lyragw')]}" />
                    <field name="lyra_card_brand" attrs="{'invisible': [('provider', '!=', 'lyragw')]}" />
                    <field name="lyra_card_number" attrs="{'invisible': [('provider', '!=', 'lyragw')]}" />
                    <field name="lyra_expiration_date" attrs="{'invisible': [('provider', '!=', 'lyragw')]}" />
                    <field name="lyra_auth_result" attrs="{'invisible': [('provider', '!=', 'lyragw')]}" />
                </field>

                <xpath expr="//form/sheet/group[last()]" position="after">
                    <group string="Transaction log" attrs="{'invisible': [('provider', '!=', 'payzen')]}">
                        <field name="lyra_raw_data" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>